<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="abass.com.firebasepushnotifications.Home">

    <include
        layout="@layout/my_action_bar"
        android:id="@+id/app_bar"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/help_request_Btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/place_autocomplete_button_padding"
            android:drawableTop="@drawable/ic_charity"
            android:padding="25dp"
            android:text="Help Request"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/Blood_BTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_blood_transfusion"
            android:padding="25dp"
            android:text="Request Blood"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/SOS_BTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_sos"
            android:padding="25dp"
            android:text="SOS Message"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Places_BTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_placeholder"
            android:padding="25dp"
            android:text="Places"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/First_Aid_BTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_online"
            android:padding="25dp"
            android:text="First Aid Tips"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>
