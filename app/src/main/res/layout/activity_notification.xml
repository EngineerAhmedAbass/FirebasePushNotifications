<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
     android:layout_width="fill_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context="abass.com.firebasepushnotifications.NotificationActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="160dp"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="الطلب من "
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/from_txt"
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/text1"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="اسم الراسل"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text2"
                android:layout_width="160dp"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="مجال الطلب "
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/domain_txt"
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/text2"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="المجال"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="الوصف"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="العنوان"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>